{
  "name": "Miner√≠a de Datos ITAM - Python 3.13",
  "image": "mcr.microsoft.com/devcontainers/python:3.13",

  "features": {
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
      "version": "1.6.39"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.analysis.typeCheckingMode": "basic",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll": "explicit",
          "source.organizeImports": "explicit"
        },
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff"
        },
        "ruff.enable": true,
        "ruff.organizeImports": true,
        "notebook.formatOnSave.enabled": true,
        "notebook.codeActionsOnSave": {
          "source.fixAll": "explicit",
          "source.organizeImports": "explicit"
        },
        "jupyter.kernels.filter": [
          {
            "path": "${workspaceFolder}/.venv/bin/python",
            "type": "pythonEnvironment"
          }
        ],
        "notebook.defaultKernel": "mineria-datos",
        "files.exclude": {
          "**/__pycache__": true,
          "**/.ipynb_checkpoints": true,
          "**/.ruff_cache": true,
          "**/chapters/_freeze": true,
          "**/chapters/.quarto": true
        },
        "quarto.render.previewType": "internal"
      },

      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "quarto.quarto",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml"
      ]
    }
  },

  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "postStartCommand": "sleep 2",

  "forwardPorts": [4200],
  "portsAttributes": {
    "4200": {
      "label": "Quarto Preview",
      "onAutoForward": "notify"
    }
  },

  "remoteUser": "vscode"
}
